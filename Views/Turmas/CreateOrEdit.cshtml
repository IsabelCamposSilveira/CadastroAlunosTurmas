@{
    ViewData["Title"] = "Criar Turma";
}

<link rel="stylesheet" href="~/css/turmas/create.css" asp-append-version="true" />
@model CadastroEscola.Models.Turma

<h1>@(Model.ID == 0 ? "Criar Turma" : "Editar Turma")</h1>
<form asp-action="CreateOrEdit" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome da Turma</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Turno" class="control-label">Turno</label>
        <select asp-for="Turno" class="form-control">
            <option value="Manhã">Manhã</option>
            <option value="Tarde">Tarde</option>
            <option value="Noite">Noite</option>
        </select>
        <span asp-validation-for="Turno" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AnoEscolar" class="control-label">Ano Escolar</label>
        <input asp-for="AnoEscolar" class="form-control" type="number" />
        <span asp-validation-for="AnoEscolar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>
